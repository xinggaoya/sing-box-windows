{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "sing-box-windows",
  "version": "2.0.0",
  "identifier": "cn.moncn.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:6221",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "sing-box-windows",
        "width": 960,
        "height": 640,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis",
      "deb",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "src/config/*"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libssl3",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "librsvg2-2",
          "pango1.0",
          "libcairo2",
          "libgdk-pixbuf2.0-0",
          "libglib2.0-0",
          "libsoup2.4-1"
        ]
      }
    }
  }
}