{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "sing-box-windows",
  "version": "2.2.2",
  "identifier": "cn.moncn.singbox",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:6221",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "sing-box-windows",
        "width": 1024,
        "height": 700,
        "minWidth": 1024,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis",
      "deb",
      "appimage",
      "dmg",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
